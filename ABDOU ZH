<script>
let count = 0;
let total = 0;

function addToCart(name, price, noteId, colorId) {
    let note = document.getElementById(noteId).value;
    let color = document.getElementById(colorId).value;
    count++;
    total += price;

    document.getElementById("count").innerText = count;
    document.getElementById("total").innerText = total + " Ø¯Ø¬";

    let li = document.createElement("li");
    li.innerHTML = name + " - " + price + " Ø¯Ø¬" +
        (color ? " | Ø§Ù„Ù„ÙˆÙ†: " + color : "") +
        (note ? " | Ù…Ù„Ø§Ø­Ø¸Ø©: " + note : "") +
        ' <button onclick="removeItem(this,'+price+')">Ø­Ø°Ù</button>';
    document.getElementById("items").appendChild(li);

    document.getElementById(noteId).value = "";
}

function removeItem(btn, price) {
    btn.parentElement.remove();
    count--;
    total -= price;

    document.getElementById("count").innerText = count;
    document.getElementById("total").innerText = total + " Ø¯Ø¬";
}
